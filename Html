<body>
    <div class="container">
        <div class="header">
            <h1>Lua Script Editor</h1>
            <div class="buttons">
                <button onclick="formatCode()">Format Code</button>
                <button onclick="clearEditor()">Clear</button>
                <button onclick="downloadCode()">Download</button>
            </div>
        </div>
        <div class="editor-container">
            <textarea id="editor">-- Write your Lua script here
print("Hello, Lua!")</textarea>
        </div>
        <div class="footer">
            Created with ❤️ using CodeMirror
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.12/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.12/mode/lua/lua.min.js"></script>
    <script>
        const editor = CodeMirror.fromTextArea(document.getElementById('editor'), {
            mode: 'lua',
            theme: 'dracula',
            lineNumbers: true,
            autoCloseBrackets: true,
            matchBrackets: true,
            tabSize: 4,
            indentWithTabs: true,
            extraKeys: {
                'Ctrl-Space': 'autocomplete'
            }
        });

        window.addEventListener('resize', () => {
            editor.refresh();
        });

        function formatCode() {
            const code = editor.getValue();
            try {
                let formatted = code
                    .replace(/\n\s*\n/g, '\n')
                    .split('\n')
                    .map(line => line.trimEnd())
                    .join('\n');
                editor.setValue(formatted);
            } catch (e) {
                alert('Error formatting code: ' + e.message);
            }
        }

        function clearEditor() {
            editor.setValue('');
        }

        function downloadCode() {
            const code = editor.getValue();
            const blob = new Blob([code], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'script.lua';
            a.click();
            URL.revokeObjectURL(url);
        }
    </script>
</body>
